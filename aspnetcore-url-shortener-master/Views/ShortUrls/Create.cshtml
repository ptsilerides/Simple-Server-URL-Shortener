@model ShortUrl
@{
    ViewData["Title"] = "Create a new short URL";
}

<br />

<div class="jumbotron">

    <h1>URL Shortener Prototype</h1>

    <br />

    <p>Enter your Replika link components below to create a short URL for you!</p>

    <br />

    <form asp-action="Create">
        <div class="form-horizontal">
            <div class="input-group input-group-lg">
                <input type="text" class="form-control" name="BrandName" placeholder="Enter Brand Name (required)">
                <input type="text" class="form-control" name="UserID" placeholder="Enter your UserID (required)">
                <input type="text" class="form-control" name="BoardID" placeholder="Enter Board ID (required)">
                @*<input asp-for="OriginalUrl" class="form-control" placeholder="Paste the URL to be shorten..." />*@
                <span class="input-group-btn">
                    <button class="btn btn-primary" type="submit">Shorten URL</button>
                </span>
            </div>
        </div>
    </form>
</div>
